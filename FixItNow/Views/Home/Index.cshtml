@model IEnumerable<FixItNow.Models.Service>
@{
    ViewData["Title"] = "Home";
}

<section class="hero mb-5 box-shadow">
    <div class="row align-items-center">
        <div class="col-lg-7">
            <h1 class="display-4 mb-3">Book trusted help for home tasks</h1>
            <p class="mb-4">Plumbing, electrical, moving, cleaning, mounting, and more—done by vetted pros.</p>
            <div class="search-bar d-flex">
                <input class="form-control form-control-lg border-0" placeholder="What do you need help with?" />
                <a class="btn btn-primary btn-lg ml-2" href="/Services">Find help</a>
            </div>
            <div class="mt-3">
                <span class="badge-tr mr-2">Furniture Assembly</span>
                <span class="badge-tr mr-2">TV Mounting</span>
                <span class="badge-tr">Cleaning</span>
            </div>
        </div>
        <div class="col-lg-5 mt-4 mt-lg-0">
            <div class="card border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <div class="rounded-circle mr-2" style="width:10px;height:10px;background:var(--primary);"></div>
                        <strong>Your satisfaction, guaranteed</strong>
                    </div>
                    <p class="mb-0 text-muted">Background-checked pros. Easy scheduling. Secure payments.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex flex-wrap mt-4 text-muted">
        <div class="mr-4">Furniture assemblies: <strong>3.4M+</strong></div>
        <div class="mr-4">Moving tasks: <strong>1.5M+</strong></div>
        <div class="mr-4">Items mounted: <strong>1M+</strong></div>
        <div>Homes cleaned: <strong>890k+</strong></div>
    </div>
    <div class="mt-3 small text-muted">Inspired by Taskrabbit’s theme and UX <a href="https://www.taskrabbit.com/" target="_blank" rel="noopener">source</a>.</div>
</section>

<section class="mb-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="h4 mb-0">Popular services</h2>
        <a class="btn btn-outline-primary btn-sm" href="/Services">See all</a>
    </div>
    <div class="row">
        @foreach (var s in Model.Take(6))
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-1">@s.Name</h5>
                        <p class="card-text flex-grow-1">@s.Description</p>
                        <div class="d-flex align-items-center justify-content-between mt-2">
                            <span class="text-muted">₹@s.Price</span>
                            <a class="btn btn-sm btn-primary" href="/Services/Details/@s.Id">Book</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
